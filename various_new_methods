df = pd.concat([df.drop(['Gender'],axis=1), dummies],axis=1)

dummies1 = pd.get_dummies(df[['Embarked']], drop_first=True)
df = pd.concat([df.drop(['Embarked'],axis=1), dummies1],axis=1)


